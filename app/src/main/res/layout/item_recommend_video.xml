<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageView_video"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/recommend_video_example"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_video"
            android:layout_alignParentLeft="true"
            android:paddingLeft="16dp"
            android:textColor="@color/mainText"
            android:textSize="14sp"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/textView_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView_video"
            android:layout_alignParentRight="true"
            android:textColor="@color/lightText"
            android:paddingRight="16dp"
            android:textSize="12sp"
            android:text="1000人观看"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="18dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/round_play_background"
            android:tint="#333333"
            android:src="@drawable/play"/>

    </RelativeLayout>
</FrameLayout>