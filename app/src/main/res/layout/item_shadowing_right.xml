<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <View
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:color="@color/colorPrimary"
        android:radius="4dp"
        app:dd_animationDuration="500"
        app:dd_horizontalSpacing="4dp"
        app:dd_numDots="3"
        app:dd_scaleMultiplier="1.5" />

    <io.techery.properratingbar.ProperRatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        app:prb_clickable="false"
        app:prb_defaultRating="0"
        app:prb_tickNormalDrawable="@drawable/star_unchecked_big"
        app:prb_tickSelectedDrawable="@drawable/star_checked_big"
        app:prb_tickSpacing="3dp"
        app:prb_totalTicks="5" />

    <Button
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_listview_blue"
        android:text="打分"
        android:textColor="@color/colorPrimary"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:text="10''"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout_chat"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <com.jiubai.lzenglish.widget.ChatImageView
            android:id="@+id/chatImageView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            app:arrow_height="10dp"
            app:arrow_top="13dp"
            app:arrow_width="5dp"
            app:direction="right"
            app:offset="5dp"
            app:radius="4dp" />

        <ImageView
            android:id="@+id/imageView_read"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="2dp"
            android:src="@drawable/read_right_3"
            android:tint="#439E1B" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop" />

</LinearLayout>